<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#000" />
            <gradient android:angle="-45" android:startColor="#66000000" android:endColor="#20000000"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <gradient android:angle="-45" android:startColor="#20000000" android:endColor="#66000000"  />
        </shape>
    </item>
</selector>