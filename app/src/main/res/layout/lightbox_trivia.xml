<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.carr3r.waltsnspiders.styled.StyledTextview
            android:id="@+id/description"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:lineSpacingExtra="5dp"
            android:textSize="14sp"
            android:background="@drawable/rounded_title"
            android:textColor="@android:color/white"
            android:text="description" />

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/gradient_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/letterA"
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:src="@drawable/jewel1_p1"/>

                <com.carr3r.waltsnspiders.styled.StyledTextview
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerA"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:minWidth="100dp"
                    android:text="Answer"/>

                <ImageView
                    android:id="@+id/letterB"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/jewel2_p1"/>

                <com.carr3r.waltsnspiders.styled.StyledTextview
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerB"
                    android:textSize="12sp"
                    android:minWidth="100dp"
                    android:textColor="@android:color/white"
                    android:text="Answer"/>

                <ImageView
                    android:id="@+id/letterC"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/jewel3_p1"/>

                <com.carr3r.waltsnspiders.styled.StyledTextview
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerC"
                    android:textSize="12sp"
                    android:minWidth="100dp"
                    android:textColor="@android:color/white"
                    android:text="Answer"/>

                <ImageView
                    android:id="@+id/letterD"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/jewel4_p1"/>
                <com.carr3r.waltsnspiders.styled.StyledTextview
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/answerD"
                    android:minWidth="100dp"
                    android:textColor="@android:color/white"
                    android:text="Answer"/>

            </GridLayout>
        </LinearLayout>
        <com.carr3r.waltsnspiders.styled.StyledButton
            android:id="@+id/closeButton"
            android:textSize="14sp"
            android:text="@string/go"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/rounded_corners"
            android:textColor="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="35dp" />
    </LinearLayout>

    <com.appbrain.AppBrainBanner
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>